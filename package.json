{
  "name": "connective-byte",
  "version": "1.0.0",
  "description": "ConnectiveByte: A modern web development framework with Next.js and Express",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all --parallel dev:*",
    "dev:frontend": "npm run dev -w apps/frontend",
    "dev:backend": "npm run dev -w apps/backend",
    "build": "npm-run-all build:frontend build:backend",
    "build:frontend": "npm run build -w apps/frontend",
    "build:backend": "npm run build -w apps/backend",
    "build:netlify": "cd apps/frontend && npm run build",
    "preview": "cd apps/frontend && npx serve@latest out",
    "test": "npm-run-all test:frontend test:backend",
    "test:frontend": "npm test -w apps/frontend",
    "test:backend": "npm test -w apps/backend",
    "test:e2e": "npm run test:e2e -w apps/frontend",
    "lint": "npm-run-all lint:frontend lint:backend",
    "lint:frontend": "npm run lint -w apps/frontend",
    "lint:backend": "npm run lint -w apps/backend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "type-check": "npm run type-check -w apps/frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nobu007/connective-byte.git"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "express",
    "monorepo"
  ],
  "author": "Nobu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nobu007/connective-byte/issues"
  },
  "homepage": "https://github.com/nobu007/connective-byte#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
